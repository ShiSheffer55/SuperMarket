<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/style/checkout.css">
</head>
<body>

    <%- include('partials/header') %>
    <br>
    <br>
    <h1 id="title">&#9734; אישור הזמנה &#9734;</h1> 
    <br>
    <br>
    <% if (cart.length === 0) { %>
        <p>Your cart is empty</p>
    <% } else { %>
        <div id="div1">
            <div class="cart-items">
                <% cart.forEach(item => { %>
                    <div class="cart-item">
                        <img src="<%= item.img %>" alt="<%= item.title %>" width="50">
                        <div class="item-details">
                            <strong><%= item.title %></strong> - <%= item.price %>₪ x <%= item.quantity %>
                        </div>
                    </div>
                <% }); %>
            </div>
            <p>Total: <%= cart.reduce((acc, item) => acc + item.price * item.quantity, 0).toFixed(2) %>₪</p>
            <br>
            <div class="buttons">
                
                <form action="/cart/place-order" method="POST" class="inline-form">
                    <button type="submit" class="btn btn-primary">אישור הזמנה</button>
                </form>
                <button id="cancel-cart" class="btn btn-danger">מחיקת הזמנה</button>
            </div>
        </div>
    <% } %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/JavaScript/cart.js"></script>
</body>
</html>
