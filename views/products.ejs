<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style/products.css">
    <title>Product List</title>
</head>
<body>
    <%- include('partials/header') %>

    
    <!-- for example2 -->

    <!-- Display the products -->
    <% if (user && user.role === 'admin') { %>
        <a href="/products/add">Add New Product</a>
    <% } %>

     <main>
        <% Products.forEach(Product => { %>
            <% if (Product.amount > 0) { %>
            <div class="card" >
                <img src="<%= Product.img %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= Product.title %></h5>
                  <p class="card-text"><%= Product.sub %></p>
                  <p>₪ <%= Product.price%></p>
                    <button id="AddtoCart" class="btn btn-primary">הוספה לסל</button>
                    <% if (user && user.role === 'admin') { %>
                        <div class="actions">
                        <a href="/edit/<%= collectionName %>/<%= Product._id %>">Edit</a>
                        <a href="/delete/<%= collectionName %>/<%= Product._id %>" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                    </div>

                     <% } %>

                </div>
              </div>
              <% } %>
        <% }) %>
  
   </main>
   <br>
    <h1 id="T1">&#9734; הוסף מוצר חדש &#9734;</h1>
    <form action="/add" method="POST">
      <br>
      <table id="simple">
        <tbody>
            <tr id="d1">
                <td><input type="text" id="title" name="title" required></td>
                <td id="i1">כותרת</td>
            </tr>
            <tr id="d2">
                <td> <input type="text" id="img" name="img" required></td>
                <td id="i2">כתובת תמונה</td>
            </tr>
            <tr id="d3">
                <td> <input type="text" id="name" name="name" required></td>
                <td id="i3">שם</td>
            </tr>
            <tr id="d4">
                <td> <input type="number" id="price" name="price" step="0.01" required></td>
                <td id="i4">מחיר</td>
            </tr>
            <tr id="d5">
               <td><input type="text" id="category" name="category" required></td>
               <td id="i5">קטגוריה</td>
            </tr>
           <tr id="d6">
               <td> <input type="text" id="supplier" name="supplier" required></td>
               <td id="i7">ספק</td>
            </tr>
            <tr id="d7">
               <td><input type="number" id="amount" name="amount" required></td>
               <td id="i8">כמות</td>
            </tr>
            <tr id="d8">
               <td><input type="text" id="sub" name="sub" required></td>
               <td id="i9">תיאור</td>
           </tr>
           <tr id="d9">
             <td><select><option>true</option><option>false</option></select></td>
               <td id="i10">האם מומלץ</td>
           </tr>
        </tbody>
    </table>
    <br>
    <button id="but" type="submit">הוסף מוצר</button>
    <br>
    <br>
    <br>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/views/categoryBar.js"></script>
</body>
</html>
