    <h1>Product List</h1>

    <h1>Add New Product</h1>
    <form action="/add" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <br>
        <label for="img">Image URL:</label>
        <input type="text" id="img" name="img" required>
        <br>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <br>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="0.01" required>
        <br>
        <label for="category">Category ID:</label>
        <input type="text" id="category" name="category" required>
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <br>
        <label for="supplier">Supplier:</label>
        <input type="text" id="supplier" name="supplier" required>
        <br>
        <label for="amount">Amount:</label>
        <input type="number" id="amount" name="amount" required>
        <br>
        <label for="sub">Sub:</label>
        <input type="text" id="sub" name="sub" required>
        <br>
        <button type="submit">Add Product</button>
    </form>
    <!-- for example2 -->

    <!-- Display the products -->
     <main>
        <% Products.forEach(Product => { %>
            <% if (Product.amount > 0) { %>
            <div class="card" >
                <img src="<%= Product.img %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= Product.title %></h5>
                  <p class="card-text"><%= Product.sub %></p>
                  <p>₪ <%= Product.price%></p>
                   <a href="/edit/<%= collectionName %>/<%= Product._id %>">Edit</a>
                  <a href="/delete/<%= collectionName %>/<%= Product._id %>" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                  <a href="#" id="AddtoCart" class="btn btn-primary">הוספה לסל</a>
                 
                </div>
              </div>
              <% } %>
        <% }) %>
  
