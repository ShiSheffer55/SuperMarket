<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Users</title>
</head>
<body>

    


    <h1>Manage Users</h1>
    <!-- Display users here -->
    <% users.forEach(user => { %>
        <div>
            <h2><%= user.userName %></h2>
            <p>Full Name: <%= user.fName %> <%= user.lName %></p>
            <!-- Edit and Delete links -->
            <a href="/admin/users/edit/<%= user._id %>">Edit</a>
            <form action="/admin/users/delete/<%= user._id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
            </form>
            <hr>
        </div>
    <% }) %>
    
    <!-- Form for adding a new user -->
    <h2>Add New User</h2>
    <form action="/admin/users/add" method="POST">
        <label for="userName">שם משתמש</label>
        <input type="text" id="userName" name="userName" required>
        <br>
        <label for="fName">שם פרטי</label>
        <input type="text" id="fName" name="fName" required>
        <br>
        <label for="lName">שם משפחה</label>
        <input type="text" id="lName" name="lName" required>
        <br>
        <label for="password">סיסמה</label>
        <input type="password" id="password" name="password" required>
        <br>
        <label for="gmail">אימייל</label>
        <input type="text" id="gmail" name="gmail" required>
        <br>
        <label for="tel">טלפון</label>
        <input type="text" id="tel" name="tel" required>
        <br>
        <label for="city">עיר</label>
        <input type="text" id="city" name="city" required>
        <br>
    
        <button type="submit">Add User</button>
    </form>
</body>
</html>
