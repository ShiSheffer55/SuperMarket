<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/style/adminUsers.css">
    <link rel="stylesheet" href="/style/header.css">
</head>
<body>
    <%- include('partials/header') %>

<br>
     

    
 <!-- Form for adding a new user -->
 <h1 id="T1">&#9734; הוספת משתמש  &#9734;</h1>
 <form action="/admin/users/add" method="POST">
    <table id="simple" class="table">
        <tbody>
            <tr id="d1">
                <td><input type="text" id="userName" name="userName" class="form-control" required></td>
                <td id="i1">שם משתמש</td>
            </tr>
            <tr id="d2">
                <td><input type="text" id="fName" name="fName" class="form-control" required></td>
                <td id="i2">שם פרטי</td>
            </tr>
            <tr id="d3">
                <td><input type="text" id="lName" name="lName" class="form-control" required></td>
                <td id="i3">שם משפחה</td>
            </tr>
            <tr id="d4">
                <td><input type="text" id="password" name="password" class="form-control" required></td>
                <td id="i4">סיסמה</td>
            </tr>
            <tr id="d5">
                <td><input type="text" id="gmail" name="gmail" class="form-control" required></td>
                <td id="i5">דואר אלקטרוני</td>
            </tr>
            <tr id="d6">
                <td><input type="text" id="tel" name="tel" class="form-control" required></td>
                <td id="i6">טלפון</td>
            </tr>
            <tr id="d7">
                <td><input type="text" id="city" name="city" class="form-control" ></td>
                <td id="i7">עיר</td>
            </tr>
            <tr id="d8">
                <td>
                <select id="role" name="role" class="form-control" required>
                    <option value="כן">כן</option>
                    <option value="לא">לא</option>
                </select>
            </td>
                <td id="i7">האם מנהל?</td>
            </tr>
        </tbody>
    </table>
    <button id="but" type="submit" class="btn btn-success">הוסף משתמש</button>
 </form>
 <hr>


  <!-- Search form -->
  <form action="/admin/users/search" method="GET">
    <input id="search-box" type="text" name="q" placeholder="חיפוש לפי שם או אימייל">
    <button id="search-but" type="submit">חיפוש</button>
</form>


    <h1 id="Tusers"> &#9734; משתמשים &#9734;</h1>
    <!-- Display users here -->
    <% if (users.length > 0) { %>

         <% users.forEach(user => { %>
        <div class="card">
            <div class="card-body">
            <h2 id="Tcard"><%= user.userName %></h2>
            <p><%= user.fName %> <%= user.lName %></p>
            <p><%= user.gmail %></p>
        </div>
            <!-- Edit and Delete links -->
            <a id="link1" href="/admin/users/edit/<%= user._id %>">Edit</a>
            <!-- <form action="/admin/users/delete/<%= user._id %>" method="POST">
                <a id="link2" href="#" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
            </form> -->
            <a href="#" id="link2" onclick="deleteUser('<%= user._id %>'); return false;">Delete</a>
        </div>
    <% }) %> <% } else { %>
        <h3>
            <td colspan="3">No users found</td>
        </h3>
    <% } %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/JavaScript/deleteUser.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/JavaScript/categoryBar.js"></script>
</body>
</html>
