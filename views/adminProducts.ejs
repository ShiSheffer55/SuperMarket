<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style/products.css">
    <title>Product List</title>
</head>
<body>
    <%- include('partials/header') %>

    <!-- Conditional check to ensure only admin can view the entire content -->
    <% if (user && user.role === 'admin') { %>

        <!-- Add New Product Button -->
        <a href="/products/add" class="btn btn-primary mb-3">Add New Product</a>

        <main>
            <!-- Display the products -->
            <% Products.forEach(Product => { %>
                <% if (Product.amount > 0) { %>
                <div class="card mb-3" >
                    <img src="<%= Product.img %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= Product.title %></h5>
                        <p class="card-text"><%= Product.sub %></p>
                        <p>₪ <%= Product.price %></p>
                        <button id="AddtoCart" class="btn btn-primary">הוספה לסל</button>
                        <div class="actions mt-2">
                            <a href="/edit/<%= Product._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/delete/<%= Product._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }) %>

         
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/views/categoryBar.js"></script>
</body>
</html>
