<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style/products.css">
    <title>Product List</title>
</head>
<body>
    <%- include('partials/header') %>

    <!-- Conditional check to ensure only admin can view the entire content -->
    <% if (user && user.role === 'admin') { %>

        <!-- Add New Product Button -->
        <a href="/products/add" class="btn btn-primary mb-3">Add New Product</a>

        <main>
            <!-- Display the products -->
            <% Products.forEach(Product => { %>
                <% if (Product.amount > 0) { %>
                <div class="card mb-3" >
                    <img src="<%= Product.img %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= Product.title %></h5>
                        <p class="card-text"><%= Product.sub %></p>
                        <p>₪ <%= Product.price %></p>
                        <button id="AddtoCart" class="btn btn-primary">הוספה לסל</button>
                        <div class="actions mt-2">
                            <a href="/edit/<%= Product._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/delete/<%= Product._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }) %>

            <h1 id="T1">&#9734; הוסף מוצר חדש &#9734;</h1>
            <form action="/add" method="POST">
                <table id="simple" class="table">
                    <tbody>
                        <tr id="d1">
                            <td><input type="text" id="title" name="title" class="form-control" required></td>
                            <td id="i1">כותרת</td>
                        </tr>
                        <tr id="d2">
                            <td><input type="text" id="img" name="img" class="form-control" required></td>
                            <td id="i2">כתובת תמונה</td>
                        </tr>
                        <tr id="d3">
                            <td><input type="text" id="name" name="name" class="form-control" required></td>
                            <td id="i3">שם</td>
                        </tr>
                        <tr id="d4">
                            <td><input type="number" id="price" name="price" class="form-control" step="0.01" required></td>
                            <td id="i4">מחיר</td>
                        </tr>
                        <tr id="d5">
                            <td><input type="text" id="category" name="category" class="form-control" required></td>
                            <td id="i5">קטגוריה</td>
                        </tr>
                        <tr id="d6">
                            <td><input type="text" id="supplier" name="supplier" class="form-control" required></td>
                            <td id="i6">ספק</td>
                        </tr>
                        <tr id="d7">
                            <td><input type="number" id="amount" name="amount" class="form-control" required></td>
                            <td id="i7">כמות</td>
                        </tr>
                        <tr id="d8">
                            <td><input type="text" id="sub" name="sub" class="form-control" required></td>
                            <td id="i8">תיאור</td>
                        </tr>
                    </tbody>
                </table>
                <button id="but" type="submit" class="btn btn-success">הוסף מוצר</button>
            </form>

    <% } else { %>

        <!-- Message for non-admin users -->
        <div class="alert alert-danger" role="alert">
            You do not have permission to view this page.
        </div>

    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/views/categoryBar.js"></script>
</body>
</html>
