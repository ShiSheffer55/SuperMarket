    <% if (error_msg) { %>
        <div><%= error_msg %></div>
    <% } %>

    <div class="wrapper">
        <form action="/users/register" method="POST">
        <label for="userName">שם משתמש</label>
        <input type="text" id="userName" name="userName" required>
        <br>
        <label for="fName">שם פרטי</label>
        <input type="text" id="fName" name="fName" required>
