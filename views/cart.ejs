<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
</head>
<body>
    <h1>Your Shopping Cart</h1>
    <% if (cart.length === 0) { %>
        <p>Your cart is empty.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% cart.forEach(item => { %>
                    <tr>
                        <td><%= item.title %></td>
                        <td><%= item.price %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.price * item.quantity %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/cart/checkout">Proceed to Checkout</a>
    <% } %>
</body>
</html>
